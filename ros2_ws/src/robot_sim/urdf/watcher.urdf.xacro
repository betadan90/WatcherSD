<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="Watcher">

    <link name="base_footprint"/>

    <joint name="base_joint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin rpy="0 0 0" xyz="0 0 0.05"/>
    </joint>

    <link name="base_link">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0.1778"/>
            <geometry>
                <box size="0.6096 0.4953 0.3556"/>
            </geometry>
        </visual>
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0.1778"/>
            <geometry>
                <box size="0.6096 0.4953 0.3556"/>
            </geometry>
        </collision>
    <!--Added inertial tags HERE-->
        <inertial>
            <mass value="15.0"/>
            <origin xyz="0 0 0.1778" rpy="0 0 0"/>
            <inertia ixx="0.2" ixy="0.0" ixz="0.0" iyy="0.2" iyz="0.0" izz="0.2"/>  
        </inertial>
    </link>

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <axis xyz="0 1 0"/>
        <origin rpy="0 0 0" xyz="0 -0.2794 0.1778"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <origin rpy="1.5708 0 0" xyz="0 0 0"/>
            <geometry>
                <cylinder radius="0.3175" length="0.0508"/>
            </geometry>
        </visual>
        <collision>
            <origin rpy="1.5708 0 0" xyz="0 0 0"/>
            <geometry>
                <cylinder radius="0.3175" length="0.0508"/>
            </geometry>
        </collision>

    <!--Added interial tags HERE-->
        <inertial>
            <mass value="2.0"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
        </inertial>

    </link>

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <axis xyz="0 1 0"/>
        <origin rpy="0 0 0" xyz="0 0.2794 0.1778"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <origin rpy="1.5708 0 0" xyz="0 0 0"/>
            <geometry>
                <cylinder radius="0.3175" length="0.0508"/>
            </geometry>
        </visual>
        <collision>
            <origin rpy="1.5708 0 0" xyz="0 0 0"/>
            <geometry>
                <cylinder radius="0.3175" length="0.0508"/>
            </geometry>
        </collision>

        <!--Added interial tags HERE-->
        <inertial>
            <mass value="2.0"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
        </inertial>
    </link>

    <joint name="chair_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chair"/>
        <origin rpy="0 0 0" xyz="0 0 0.381"/>
    </joint>

    <link name="chair">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0.3556"/>
            <geometry>
                <box size="0.4826 0.508 0.7112"/>
            </geometry>
        </visual>
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0.3556"/>
            <geometry>
                <box size="0.4826 0.508 0.7112"/>
            </geometry>
        </collision>

        <!--Added interial tags HERE-->
        <inertial>
            <mass value="10.0"/>
            <origin xyz="0 0 0.3556" rpy="0 0 0"/>
            <inertia ixx="0.3" ixy="0.0" ixz="0.0" iyy="0.3" iyz="0.0" izz="0.3"/>
        </inertial>
    </link>

    <gazebo>
        <plugin name="diff_drive_controller" filename="libgazebo_ros_diff_drive.so">
            <ros>
                <namespace>/</namespace>
                <remapping>cmd_vel:=/cmd_vel</remapping>
                <remapping>odom:=/odom</remapping>
            </ros>

            <!-- Wheel configuration -->
            <left_joint>left_wheel_joint</left_joint>
            <right_joint>right_wheel_joint</right_joint>

            <!-- Physical params -->
            <wheel_separation>0.5588</wheel_separation>  <!-- distance between wheels -->
            <wheel_radius>0.3175</wheel_radius>          <!-- radius of your wheel -->

            <!-- Odometry settings -->
            <publish_odom>true</publish_odom>
            <publish_odom_tf>true</publish_odom_tf>
            <odometry_frame>odom</odometry_frame>
            <robot_base_frame>base_link</robot_base_frame>

            <!-- Control tuning -->
            <update_rate>50</update_rate>
            <cmd_vel_topic>/cmd_vel</cmd_vel_topic>
            <max_wheel_torque>10.0</max_wheel_torque>
        </plugin>
    </gazebo>
    

</robot>
